@model IEnumerable<Project1_HANS.Models.MRTSungaiBulohModel>

<html>
	<head>
    <title>MRT List</title>
    <link href="~/css/tableindex.css" rel="stylesheet" />
	</head>
	<body>
		<div class="table-container">
			<h1>MANAGEMENT</h1>
			<hr />
			<br />

			<button onclick="location.href='@Url.Action("FullReport")'" class="btn btn-primary">View Report</button><br /><br />

			<h3>Transaction List</h3>
			@using (Html.BeginForm("SearchIndex", "ProjectController1", FormMethod.Get))
			{
				<p>
					<label>Search by ticket id or purchaser name</label>
					@Html.TextBox("SearchString")
					<input type="submit" value="Search" class="btn btn-primary" />
					@Html.ActionLink("Back to Full List", "Index")
				</p>
			}

			<table class="table">
				<tr class="tableHeader">
					<th>@Html.DisplayNameFor(x => x.ViewId)</th>
					<th>@Html.DisplayNameFor(x => x.ViewDateTime)</th>
					<th>@Html.DisplayNameFor(x => x.Name)</th>
					<th>Purchaser IC</th>
					<th>@Html.DisplayNameFor(x => x.Email)</th>
					<th>@Html.DisplayNameFor(x => x.StartStation)</th>
					<th>@Html.DisplayNameFor(x => x.EndStation)</th>
					<th>@Html.DisplayNameFor(x => x.TicketType)</th>
					<th>@Html.DisplayNameFor(x => x.Citizen)</th>
					<th>@Html.DisplayNameFor(x => x.Student)</th>
					<th>@Html.DisplayNameFor(x => x.SeniorCitizen)</th>
					<th>@Html.DisplayNameFor(x => x.Disable)</th>
					<th>@Html.DisplayNameFor(x => x.Amount)</th>
					<th>@Html.DisplayNameFor(x => x)</th>
				</tr>
				@foreach (var x in Model)
				{
					<tr class="tableData">
						<td>@Html.DisplayFor(y => x.ViewId)</td>
						<td>@Html.DisplayFor(y => x.ViewDateTime)</td>
						<td>@Html.DisplayFor(y => x.Name)</td>
						<td>@Html.DisplayFor(y => x.IC)</td>
						<td>@Html.DisplayFor(y => x.Email)</td>
						<td>@Html.DisplayFor(y => x.StartStation)</td>
						<td>@Html.DisplayFor(y => x.EndStation)</td>
						<td>@Html.DisplayFor(y => x.TicketType)</td>
						<td>@Html.DisplayFor(y => x.Citizen)</td>
						<td>@Html.DisplayFor(y => x.Student)</td>
						<td>@Html.DisplayFor(y => x.SeniorCitizen)</td>
						<td>@Html.DisplayFor(y => x.Disable)</td>
						<td>@Html.DisplayFor(y => x.Amount)</td>
						<td>
							@Html.ActionLink("Details", "Details", new { id = x.ViewId })
							@Html.ActionLink("Delete", "Delete", new { id = x.ViewId }) 
							@Html.ActionLink("Mail", "SendMail", new { id = x.ViewId }) 
						</td>
					</tr>
				}
			</table>
		</div>
	</body>
</html>