@model Project1_HANS.Models.MRTSungaiBulohModel

<head>
    <title>Ticket Purchase Invoice</title>
    <link href="~/css/table.css" rel="stylesheet" />
</head>
<body>
    <h1>CUSTOMER</h1>
    <hr />
    <br />
    <p>
        <button onclick="location.href='@Url.Action("PurchaseTicket")'" class="btn btn-primary">Purchase Ticket</button>
        <h3>MRT SUNGAI BULOH - KAJANG LINE</h3>
    </p>
    <table>
        <tr>
            <th></th>
            @foreach (var station in Model.Stations)
            {
                <th>@station</th>
            }
        </tr>
        @for (int i = 0; i < Model.Stations.Length; i++)
        {
            <tr>
                <th style="font-weight:bold">@Model.Stations[i]</th>
                @foreach (var fare in Model.Fares[i])
                {
                    <td>@fare.ToString("F2")</td>
                }
            </tr>
        }
    </table>
</body>
